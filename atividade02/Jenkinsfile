pipeline {
    agent any

    stages {
        stage('Cleanup') {
            steps {
                echo 'Limpando workspace...'
                deleteDir()
            }
        }

        stage('Checkout') {
            steps {
                echo 'Fazendo checkout do repositório...'
                git branch: 'main',
                    url: 'https://github.com/losleandro/atividade-jenkins-devops.git',
                    credentialsId: 'GitHubToken' // Substitua pelo ID da credencial criada no Jenkins
            }
        }

        stage('Construção') {
            steps {
                echo 'Construindo a aplicação...'
                sh 'python3 atividade.py'  // Substitua pelo comando adequado para sua aplicação
            }
        }

        stage('Entrega') {
            steps {
                echo 'Realizando entrega da aplicação...'
                sh 'cp -r * /caminho/para/entrega/' // Ajuste conforme necessário
            }
        }
    }

    post {
        always {
            echo 'Pipeline finalizada.'
        }
    }
}
