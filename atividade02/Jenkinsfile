pipeline {
    agent any

    stages {
        stage('Cleanup') {
            steps {
                sh 'docker-compose down -v || true'
            }
        }

        stage('Checkout') {
            steps {
                git branch: 'main', url: 'https://github.com/SEU_USUARIO/atividade02.git'
            }
        }

        stage('Construção') {
            steps {
                sh 'docker-compose build'
            }
        }

        stage('Entrega') {
            steps {
                sh 'docker-compose up -d'
            }
        }
    }
}
